<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@android:color/holo_blue_light"
    tools:context="com.andrewmalone.assignmentapp.ProfileActivity">


    <TextView
        android:text="Select your profile picture:"
        android:layout_width="291dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/authui_inputTextColor" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.12"
        android:layout_gravity="center"
        app:srcCompat="@android:drawable/ic_menu_gallery"
        android:id="@+id/imgView"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Select Picture"
        android:layout_marginTop="10dp"
        android:layout_width="133dp"
        android:layout_height="34dp"
        android:id="@+id/selectPictureButton"
        android:layout_above="@+id/textView4"
        android:layout_gravity="center"
        android:onClick="btnClick"
        android:background="?attr/colorAccent"
        style="@android:style/Widget.Material.Button.Borderless"
        android:textColor="@color/com_facebook_button_background_color_focused" />

    <TextView
        android:text="City:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textColor="@color/authui_inputTextColor" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText"
        android:hint="Your City"
        android:textColor="@color/authui_inputTextColor" />

    <TextView
        android:text="Description:"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:layout_alignBottom="@+id/profileDescription"
        android:layout_centerHorizontal="true"
        android:layout_width="149dp"
        android:textColor="@color/authui_inputTextColor" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/profileDescription"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:hint="Enter a little piece about yourself"
        android:layout_weight="0.02"
        android:textColor="@color/authui_inputTextColor" />

    <Button
        android:text="Show Bikes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnGoToList"
        android:background="?attr/colorAccent"
        android:onClick="onClick"
        style="@android:style/Widget.Material.Button.Borderless"
        android:textColor="@color/com_facebook_button_background_color_focused" />


</LinearLayout>
